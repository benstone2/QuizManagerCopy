@using QuizManager.Shared
@page "/new-quiz"

<div class="container">
    <h1> Create new quiz </h1>

    <EditForm Model="NewQuizDto" OnValidSubmit="SendCreateNewQuiz">

        <DataAnnotationsValidator />

        <div class="form-group">
            <label for="title"> Title </label>
            <div>
                <InputText id="title" class="form-control" @bind-Value="NewQuizDto.Title" />
            </div>
        </div>

        <div class="form-group">
            <label for="description"> Description </label>
            <div>
                <InputText id="description" class="form-control" @bind-Value="NewQuizDto.Description" />
            </div>
        </div>

        <div class="row justify-content-center">
            <button class="btn btn-success" type="submit"> Create</button>
        </div>
    </EditForm>
</div>